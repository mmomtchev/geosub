{
  "env": {
    "mocha": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:array-func/recommended"
  ],
  "plugins": [
    "mocha",
    "prefer-arrow"
  ],
  "rules": {
    "mocha/no-exclusive-tests": "error"
  },
  "parserOptions": {
    "ecmaVersion": 2017
  }
}